<Window x:Class="PUBG_Cartographer.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PUBG_Cartographer"
        mc:Ignorable="d"
        Title="CartographerOverlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        IsHitTestVisible="False" 
        Topmost="True" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" Cursor="None"
        ShowInTaskbar="False"
        Opacity="0.8">

    <Grid x:Name="Viewport">
        <Image IsHitTestVisible="False" x:Name="mapOverlay" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</Window>
